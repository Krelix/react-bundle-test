body
  font-family: -apple-system, "Segoe UI", "Roboto", "Helvetica Neue", sans-serif
  background-color: #e5e0e0
  margin: 0px

  .navigation
    display: flex
    align-content: center
    align-items: stretch
    margin: 0px

    a
      height: auto
      font-size: large
      background-color: #e5e0e0
      color: #2e2e2e
      text-decoration: none
      order: 0
      flex: 0 1 auto
      margin: 0px 5px
      padding: 20px 10px
    a:hover
      background-color: #f9f3f0
    a:visited
      color: #2e2e2e

.button
  border: 1px solid #ececec
  margin: 5px 5px
  padding: 40px 15px
  background-color: #f9f3f0

  h4
    text-align: center

#buttonList
  display: flex

#content
  border-top: white solid 1px

  h1
    margin: 5px 10px 10px 10px

  div
    margin-left 10px

  #buttonForm

    div
      display: table-row
      margin: 5px 10px
      width: 100%

      label
        text-align: right
        width: 150px
        display: inline-block
        padding: 5px 10px

      input
        display: inline-block
        margin: 5px 10px

    div#submit
      display: inline-flex
      justify-content: flex-end
      width: 300px
